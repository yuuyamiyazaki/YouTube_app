<div class="sky-form" role="form">
    <%= form_tag(static_pages_video_path, :method => :get) do %>
        <%= text_field :video_data, :word, value: @word %>
        <%= submit_tag  '検索', class: 'btn btn-large btn-primary' %>
    <% end %>
</div>

<h1>detail</h1>

  <div class="flexbox">
   <section class="main">
    <iframe id="ytplayer" type="text/html" width="640" height="360"
      src="https://www.youtube.com/embed/<%= @video_id %>?autoplay=1"
      frameborder="0"/>
    </iframe>
   </section>
   <section class="side">

    <%= form_for(@post, :url => {:controller => :static_pages,:action => 'create'}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.hidden_field :video_id, :value => @video_id %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  
  <div class='comment'>
 <ul>
  <% @posts.each do |post| %>
  <li><%= post.content %></li>
  <% end %>
 </ul>
</div>


   </section>
  </div>

